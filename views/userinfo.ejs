<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <main>
        <h1>User Info</h1>
        <table class="table-container">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.userfirst %></td>
                        <td><%= user.userlast %></td>
                        <td><%= user.userphone %></td>
                        <td><%= user.useremail %></td>
                        <td><%= user.username %></td>
                        <td>
                            <div class="password-container">
                                <span class="password-placeholder">*****</span>
                                <span class="password-text"><%= user.password %></span>
                            </div>
                        </td>
                        <td>
                            <form action="/edituser/<%= user.userid %>" method="GET">
                                <button type="submit" style="width: 100%; text-align: center;">Edit</button>
                            </form>
                                <br>
                            <form action="/deleteuser/<%= user.userid %>" method="POST">
                                <button type="submit" style="width: 100%; text-align: center;" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <form action="/adduser" method="GET">
            <button type="submit">Add User</button>
        </form>
        <br>
        <form action="/adminlanding" method="GET">
            <button type="submit">Home</button>
        </form>
    </main>
</body>
</html>