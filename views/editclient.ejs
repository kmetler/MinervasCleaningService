<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Client</title>
    <link rel="icon" href="/images/logo.png" type="image/x-icon"> <!-- Update path to your logo -->
    <link rel="stylesheet" href="/css/editclient.css">
</head>
<body>
    <div class="navbar">
        <h1>
            <a style="color: white; text-decoration: none"href="/adminlanding">Admin Landing</a>
        </h1>
        <ul>
            <li><a href="/clientinfo">Client Info</a></li>
            <li><a href="/userinfo">User Info</a></li>
        </ul>
    </div>
    <main>
        <h1>Edit Client Details</h1>
        <form action="/updateclient/<%= client.clientid %>" method="POST">
            <section>
                <h2>Client Information</h2>
                <div>
                    <label for="clientfirst">First Name:</label>
                    <input type="text" id="clientfirst" name="clientfirst" value="<%= client.clientfirst %>" required>
                </div>
                <div>
                    <label for="clientlast">Last Name:</label>
                    <input type="text" id="clientlast" name="clientlast" value="<%= client.clientlast %>" required>
                </div>
                <div>
                    <label for="clientstreetaddress">Street Address:</label>
                    <input type="text" id="clientstreetaddress" name="clientstreetaddress" value="<%= client.clientstreetaddress %>" required>
                </div>
                <div>
                    <label for="clientcity">City:</label>
                    <input type="text" id="clientcity" name="clientcity" value="<%= client.clientcity %>" required>
                </div>
                <div>
                    <label for="clientstate">State:</label>
                    <input type="text" id="clientstate" name="clientstate" value="<%= client.clientstate %>" required>
                </div>
                <div>
                    <label for="clientzipcode">Zip Code:</label>
                    <input type="text" id="clientzipcode" name="clientzipcode" value="<%= client.clientzipcode %>" required>
                </div>
                <div>
                    <label for="clientphone">Phone:</label>
                    <input type="tel" id="clientphone" name="clientphone" value="<%= client.clientphone %>" placeholder="Enter phone (123-456-7890)" pattern="^\d{3}-\d{3}-\d{4}$" required>
                </div>
                <div>
                    <label for="clientemail">Email:</label>
                    <input type="email" id="clientemail" name="clientemail" value="<%= client.clientemail %>" required>
                </div>
                <div>
                    <label for="status">Status:</label>
                    <select name="status" id="status">
                        <option value="P" <%= client.status === 'P' ? 'selected' : '' %>>Pending</option>
                        <option value="A" <%= client.status === 'A' ? 'selected' : '' %>>Approved</option>
                    </select>
                </div>
                <div>
                    <label for="typeid">Service Type:</label>
                    <select name="typeid" id="typeid">
                        <% serviceTypes.forEach(type => { %>
                            <option value="<%= type.typeid %>" <%= client.typeid === type.typeid ? 'selected' : '' %>>
                                <%= type.typename %>
                            </option>
                        <% }); %>
                    </select>
                </div>
                <div>
                    <label for="buildingid">Building Type:</label>
                    <select name="buildingid" id="buildingid">
                        <% buildingTypes.forEach(building => { %>
                            <option value="<%= building.buildingid %>" <%= client.buildingid === building.buildingid ? 'selected' : '' %>>
                                <%= building.buildingtype %>
                            </option>
                        <% }); %>
                    </select>
                </div>
            </section>
            <button type="submit">Save Changes</button>
            <button type="button" onclick="window.location.href='/clientdetails/<%= client.clientid %>';">Cancel</button>
        </form>
    </main>
</body>
</html>